@model IEnumerable<BasketMvc.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="display-5 text-center my-4">Products</h1>
            <p class="text-center fw-light">List of all products in basket.</p>

            <div class="text-end mb-3">
                <a asp-action="Create" class="btn btn-primary">Add New</a>
            </div>

            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Naziv)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Cijena)
                        </th>
                        <th scope="col">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center">No products found.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Naziv)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cijena)
                                </td>
                                <td>
                                    <div class="btn-group gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-info">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-secondary">Details</a>
                                        <form asp-action="Delete" asp-route-id="@item.ID" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    
